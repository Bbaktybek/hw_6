<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/ic_door"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_yt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_dr"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="40sp"
        android:text="Вход"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_fr"
        app:layout_constraintStart_toStartOf="@id/tv_yt"
        app:layout_constraintEnd_toEndOf="@id/tv_yt"
        app:layout_constraintTop_toBottomOf="@id/tv_yt"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Выполните вход"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_gr"
        app:layout_constraintStart_toStartOf="@id/tv_fr"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/tv_fr"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_fr"
        android:text="или зарегистрируйтесь."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:backgroundTint="@color/w"
        android:text="Войти"
        android:layout_marginBottom="100dp"
        android:id="@+id/button_mt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="320dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/et_ht"
        android:hint="Введите вашу почту"
        android:textColor="@color/black"
        android:background="@color/white"
        android:paddingStart="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="@id/bt_ch"
        app:layout_constraintEnd_toEndOf="@id/bt_ch"
        app:layout_constraintBottom_toTopOf="@id/bt_ch"
        app:circularflow_radiusInDP="12dp"
        android:layout_width="320dp"
        android:layout_height="50dp"/>

    <EditText
        android:password="true"
        android:id="@+id/bt_ch"
        app:layout_constraintEnd_toEndOf="@id/button_mt"
        app:layout_constraintStart_toStartOf="@id/button_mt"
        app:layout_constraintBottom_toTopOf="@id/button_mt"
        android:textColor="@color/black"
        android:background="@color/white"
        android:paddingStart="8dp"
        android:hint="Введите пароль"
        android:layout_width="320dp"
        android:layout_height="50dp"/>


    <TextView
        android:textColor="@color/white"
        android:layout_marginBottom="74dp"
        android:id="@+id/tv_ds"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:text="Забыли пароль?  Введите сюда"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>